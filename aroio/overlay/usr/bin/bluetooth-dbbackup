#!/bin/sh

. /boot/userconfig.txt

SDFILE='/boot/btdb.tar'
RAMDIR='/var/lib/bluetooth'

if [ "$BTPURGE" = "YES" ]
then    echo "Deleting stored BT-trust database upon request from userconfig.txt"
        cardmount rw
        rm $SDFILE
        sed -i '/BTPURGE="YES"/c\BTPURGE="NO"' /boot/userconfig.txt
        cardmount ro
    fi


mkdir -p "$RAMDIR"
cd /
[ -e "$SDFILE" ] && echo "Stored BT-trust-database found, writing it back to system..." && tar --warning=no-timestamp -xf "$SDFILE"

while (true)
do
    inotifywait -r -e modify,create --exclude '\.tmp' "$RAMDIR"
    echo "Files changed in "$RAMDIR", will write changes to "$SDFILE"..."
    cardmount rw
    sleep 0.5
    cd "$RAMDIR"
    tar --warning=no-timestamp -cf "$SDFILE" /var/lib/bluetooth/*
    sleep 0.5
    cardmount ro
done
