#!/bin/sh

. /boot/userconfig.txt

touch /tmp/checkvolume

[ "$1" = "ms_on" ] && AUDIO_OUTPUT="vol-plug-ms" || AUDIO_OUTPUT="vol-plug"
echo $AUDIO_OUTPUT

[ -e /tmp/checkvolume ] && controlaudio stop

[ -e /tmp/checkvolume ] && aplay -D $AUDIO_OUTPUT /opt/www/assets/brown_noise.wav

rm /tmp/checkvolume
controlaudio start

#sleep 1
echo "Done!"
