#!/bin/sh

. /boot/userconfig.txt

CONFIG="/boot/config.txt"
ALSACONFIG="/etc/modprobe.d/alsa-base.conf"

[ "$DISPLAY_ROTATE" = "ON" ] && [ $(grep -c 'display_rotate=0' /boot/config.txt ) -gt 0 ] \
	&& cardmount rw && sed -i '/display_rotate=0/c\display_rotate=1' "$CONFIG" && REBOOT=1

[ "$DISPLAY_ROTATE" = "OFF" ] && [ $(grep -c 'display_rotate=1' /boot/config.txt ) -gt 0 ] \
	&& cardmount rw && sed -i '/display_rotate=1/c\display_rotate=0' "$CONFIG" && REBOOT=1

[ "$DISPLAY_ROTATE" = "ON" ] && DISPLAY_ROTATE="display_rotate=1" || DISPLAY_ROTATE="display_rotate=0"


[ "$ONBOARD_WIFI" = "ON" ] && [ $(grep -c 'disable-wifi' /boot/config.txt ) -gt 0 ] \
	&& cardmount rw && sed -i '/disable-wifi/d' "$CONFIG" && REBOOT=1

[ "$ONBOARD_WIFI" = "OFF" ] && [ $(grep -c 'disable-wifi' /boot/config.txt ) -eq 0 ] \
	&& cardmount rw && echo 'dtoverlay=disable-wifi' >> "$CONFIG" && REBOOT=1

[ "$ONBOARD_WIFI" = "OFF" ] && WIFI="dtoverlay=disable-wifi" || WIFI=""


[ "$ONBOARD_BLUETOOTH" = "ON" ] && [ $(grep -c 'disable-bt' /boot/config.txt ) -gt 0 ] \
	&& cardmount rw && sed -i '/disable-bt/d' "$CONFIG" && REBOOT=1

[ "$ONBOARD_BLUETOOTH" = "OFF" ] && [ $(grep -c 'disable-bt' /boot/config.txt ) -eq 0 ] \
	&& cardmount rw && echo 'dtoverlay=disable-bt' >> "$CONFIG" && REBOOT=1

[ "$ONBOARD_BLUETOOTH" = "OFF" ] && BLUETOOTH="dtoverlay=disable-bt" || BLUETOOTH=""

if grep -q 'pi3-disable-wifi' "$CONFIG"
then	echo "Found old syntax in config.txt, fixing it."
		cardmount rw
		sed -i '/dtoverlay=pi3-disable-wifi/c\dtoverlay=disable-wifi' boot/config.txt
		REBOOT=1
fi

if grep -q 'pi3-disable-bt' "$CONFIG"
then	echo "Found old syntax in config.txt, fixing it."
		cardmount rw
		sed -i '/dtoverlay=pi3-disable-bt/c\dtoverlay=disable-bt' boot/config.txt
		REBOOT=1
fi

if grep -q 'pi3-act-led' "$CONFIG"
then	echo "Found old syntax in config.txt, fixing it."
		cardmount rw
		sed -i '/dtoverlay=pi3-act-led,gpio=22/c\dtoverlay=act-led,gpio=22' boot/config.txt
		REBOOT=1
fi

if grep -q 'dtoverlay=lirc-rpi' "$CONFIG"
then    echo "Found old lirc configuration in config.txt, writing a new one with gpio-ir."
        cardmount rw
        sed -i '/dtoverlay=lirc-rpi/c\dtoverlay=gpio-ir,gpio_pin=25' /boot/config.txt
        REBOOT=1
fi

if ! grep -q 'dtoverlay=gpio-ir' "$CONFIG"
then    echo "Missing gpio-ir overlay in config.txt, writing a new one."
        cardmount rw
        echo 'dtoverlay=gpio-ir,gpio_pin=25' >> /boot/config.txt
        REBOOT=1
fi

if ! grep -q 'dtoverlay=act-led,gpio=22' "$CONFIG"
then    echo "Missing gpio-LED overlay in config.txt, writing a new one."
        cardmount rw
        echo 'dtoverlay=act-led,gpio=22' >> /boot/config.txt
        echo 'dtparam=act_led_trigger=heartbeat' >> /boot/config.txt
        REBOOT=1
fi

if grep -q 'initramfs rootfs.cpio' "$CONFIG"
then    echo "Found old intramfs entry in config.txt, deleting it."
        cardmount rw
        sed -i '/initramfs rootfs.cpio/d' /boot/config.txt
        REBOOT=1
fi

case $SOUNDCARD in
	'Internal HDMI audio')
	if ! grep -qw '#HDMI_AUDIO' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"_bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			dtoverlay=i2s-mmap
			dtparam=audio=on
			#HDMI_AUDIO
			hdmi_drive=2 #HDMI_AUDIO
			dtoverlay=lirc-rpi,gpio_in_pin=25
			disable_overscan=1
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_bcm2835' "$ALSACONFIG"
	;;



	'Internal audio jack')
	if ! grep -qw '#ONBOARD_AUDIO' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"_bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			dtoverlay=i2s-mmap
			dtparam=audio=on
			#ONBOARD_AUDIO
			dtoverlay=lirc-rpi,gpio_in_pin=25
			disable_overscan=1
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_bcm2835' "$ALSACONFIG"
	;;


	'JustBoom DAC')
	if ! grep -qw 'dtoverlay=justboom-dac' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"_bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			dtoverlay=i2s-mmap
			dtoverlay=justboom-dac
			dtoverlay=lirc-rpi,gpio_in_pin=25
			disable_overscan=1
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_soc_justboom_dac' "$ALSACONFIG"
	;;


	'AroioDAC-SRC')
	if ! grep -qw 'dtoverlay=aroiodac' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"_bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			dtoverlay=i2s-mmap
			dtoverlay=aroiodac
			dtoverlay=lirc-rpi,gpio_in_pin=25
			disable_overscan=1
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_soc_aroiodac' "$ALSACONFIG"
	;;


	'IQAudIO DAC')
	if ! grep -qw 'dtoverlay=iqaudio-dac' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"_bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			dtoverlay=i2s-mmap
			dtoverlay=iqaudio-dac
			dtoverlay=lirc-rpi,gpio_in_pin=25
			disable_overscan=1
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_soc_iqaudio_dac' "$ALSACONFIG"
	;;


	'HiFiBerry DAC')
	if ! grep -qw 'dtoverlay=hifiberry-dac' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"-bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			dtparam=i2c_arm=on
			dtoverlay=i2s-mmap
			dtoverlay=hifiberry-dac
			dtparam=spi=on
			dtoverlay=lirc-rpi,gpio_in_pin=25
			disable_overscan=1
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_soc_hifiberry_dac' "$ALSACONFIG"
	;;


	'HiFiBerry DAC+'|'AroioDAC')
	echo "HiFiberry DAC+"
	if ! grep -qw 'dtoverlay=hifiberry-dacplus' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"-bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			dtparam=i2c_arm=on
			dtoverlay=i2s-mmap
			dtoverlay=hifiberry-dacplus
			dtparam=spi=on
			dtoverlay=lirc-rpi,gpio_in_pin=25
			disable_overscan=1
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_soc_hifiberry_dacplus' "$ALSACONFIG"
	;;


	'HiFiBerry DAC+ ADC')
	echo "HiFiberry DAC+ ADC"
	if ! grep -qw 'dtoverlay=hifiberry-dacplusadc' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"-bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			dtparam=i2c_arm=on
			dtoverlay=i2s-mmap
			dtoverlay=hifiberry-dacplusadc
			dtparam=spi=on
			dtoverlay=lirc-rpi,gpio_in_pin=25
			disable_overscan=1
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_soc_hifiberry_dacplusadc' "$ALSACONFIG"
	;;


	'HiFiBerry DAC')
	echo "HiFiberry DAC"
	if ! grep -qw 'dtoverlay=hifiberry-dac' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"-bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			dtparam=i2c_arm=on
			dtoverlay=i2s-mmap
			dtoverlay=hifiberry-dac
			dtparam=spi=on
			dtoverlay=lirc-rpi,gpio_in_pin=25
			disable_overscan=1
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_soc_hifiberry_dac' "$ALSACONFIG"
	;;


	'HiFiBerry Digi')
	echo "HiFiBerry Digi"
	if ! grep -qw 'dtoverlay=hifiberry-digi' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"-bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			dtoverlay=i2s-mmap
			dtoverlay=hifiberry-digi
			dtoverlay=lirc-rpi,gpio_in_pin=25
			disable_overscan=1
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

	REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_soc_hifiberry_digi' "$ALSACONFIG"
	;;


	'Allo Piano DAC')
	if ! grep -qw 'dtoverlay=allo-piano-dac-pcm512x-audio' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"_bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			dtoverlay=i2s-mmap
			dtoverlay=allo-piano-dac-pcm512x-audio
			dtoverlay=lirc-rpi,gpio_in_pin=25
			disable_overscan=1
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_soc_allo_piano_dac' "$ALSACONFIG"
	;;


	'Allo Piano 2.1 DAC')
	if ! grep -qw 'dtoverlay=allo-piano-dac-plus-pcm512x-audio' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"_bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			dtoverlay=i2s-mmap
			dtoverlay=allo-piano-dac-plus-pcm512x-audio
			dtoverlay=lirc-rpi,gpio_in_pin=25
			disable_overscan=1
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_soc_allo_piano_dacplus' "$ALSACONFIG"
	;;


	'Allo Boss DAC')
	if ! grep -qw 'dtoverlay=allo-boss-dac-pcm512x-audio' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"_bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			dtoverlay=i2s-mmap
			dtoverlay=allo-boss-dac-pcm512x-audio
			dtoverlay=lirc-rpi,gpio_in_pin=25
			disable_overscan=1
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_soc_allo_boss_dac' "$ALSACONFIG"
	;;


	'Allo DigiOne')
	if ! grep -qw 'dtoverlay=allo-digione' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"_bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			dtoverlay=i2s-mmap
			dtoverlay=allo-digione
			dtoverlay=lirc-rpi,gpio_in_pin=25
			disable_overscan=1
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_soc_allo_digione' "$ALSACONFIG"
	;;


	'M-Audio Fast Track Pro')
	if ! grep -qw '#fasttrack_pro' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"-bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			disable_overscan=1
			dtoverlay=lirc-rpi,gpio_in_pin=25
			#fasttrack_pro
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_usb_audio' "$ALSACONFIG"
	;;


	'Focusrite Scarlett')
	if ! grep -qw '#fr_scarlett' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"-bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			disable_overscan=1
			dtoverlay=lirc-rpi,gpio_in_pin=25
			#fr_scarlett
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_usb_audio' "$ALSACONFIG"
	;;


	'NI Audio 8 DJ')
	if ! grep -qw '#ni_audio8dj' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"-bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			disable_overscan=1
			dtoverlay=lirc-rpi,gpio_in_pin=25
			#ni_audio8dj
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_usb_audio' "$ALSACONFIG"
	;;


	'RME Fireface UCX')
	if ! grep -qw '#fireface_ucx' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"-bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			disable_overscan=1
			dtoverlay=lirc-rpi,gpio_in_pin=25
			#fireface_ucx
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_usb_audio' "$ALSACONFIG"
	;;

	'Dr. DAC prime')
	if ! grep -qw '#dr_dac_prime' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"-bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			disable_overscan=1
			dtoverlay=lirc-rpi,gpio_in_pin=25
			#dr_dac_prime
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_usb_audio' "$ALSACONFIG"
	;;

	'I-Sabre Q2M')
	if ! grep -qw 'i-sabre-q2m' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"-bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			disable_overscan=1
			dtoverlay=lirc-rpi,gpio_in_pin=25
			dtoverlay=i-sabre-q2m
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_usb_audio' "$ALSACONFIG"
	;;

	'USB Class Compliant')
	if ! grep -qw '#usb_class_compliant' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"-bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			disable_overscan=1
			dtoverlay=lirc-rpi,gpio_in_pin=25
			#usb_class_compliant
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	# Taking care of correct soundcard order
	sed -i '/options snd slots/c\options snd slots=snd_usb_audio' "$ALSACONFIG"
	;;


	'NOTAroioDAC')
	echo "AroioDAC!"
	if ! grep -qw 'dtoverlay=hifiberry-dacplus' "$CONFIG"
	then
		cardmount rw
		echo "userconfig and config.txt have different entries for soundcards,"
		echo "backing up and writing a new config.txt..."
		cp "$CONFIG" "$CONFIG"-bak
		cat <<-EOF > "$CONFIG"
			$DISPLAY_ROTATE
			$WIFI
			$BLUETOOTH
			force_turbo=1
			dtdebug=1
			max_usb_current=1
			disable_splash=1
			kernel=zImage
			dtparam=i2c_arm=on
			dtoverlay=i2s-mmap
			dtoverlay=hifiberry-dacplus
			dtparam=spi=on
			dtoverlay=lirc-rpi,gpio_in_pin=25
			disable_overscan=1
			dtoverlay=pi3-act-led,gpio=22
			dtparam=act_led_trigger=heartbeat
		EOF

		REBOOT=1
	fi
	;;

esac

[ "$REBOOT" = "1" ] && echo "Had to make changes to config.txt, rebooting..." && cardmount ro && reboot

exit 0
